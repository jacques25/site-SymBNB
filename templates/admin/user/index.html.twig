{% extends 'admin/base.html.twig' %}

{% block title %}Administration des utilisateurs{% endblock %}

{% block body %}

<div class="container-fluid">
    <h1 class="my-5"> Gestions des utilisateurs</h1>
       <table class="table table-hover">
      <thead> 
          <tr>
              <th>Id</th>
              <th>Auteur</th>
              <th>Email</th>
              <th>Commentaire</th>
              <th>Annonces</th>
              <th>Actions</th>
          </tr>
      </thead>
       <tbody>
        {% for user in pagination.data %}
        <tr>
            <td>{{user.id}}</td>
            <td><img src="{{user.picture}}" alt="{{user.fullname}}"class="avatar avatar-micro mr-2" ></td>
           <td>{{user.email}} </td>
            <td>{{user.comments|length}}</td>
                
           
            <td> {{user.bookings|length}}</td>

            <td>
            <a href="#" class="btn btn-primary"><i class="fas fa-pen"></i> </a>
            <a href="#" class="btn btn-danger"><i class="fas fa-trash"></i></a>
            </td>
        </tr> 
        {% endfor %}
       </tbody>
      
      </table>
       
        {{ pagination.display() }}
</div>
{% endblock %}
